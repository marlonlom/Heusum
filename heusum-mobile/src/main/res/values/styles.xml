<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppTheme.Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:fontFamily">@string/text_font_family</item>
        <item name="android:background">@color/color_icons</item>
    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:fontFamily">@string/text_font_family</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
